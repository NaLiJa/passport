;-------------------------------
; #JMPBCF0
; $B999 jumps to $BCF0 to count
; timing bits in data epilogue
; e.g. Easy as ABC
; NOTE: must be run before RWTS
; patchers due to overlapping bytes
;-------------------------------
!zone {
_jmpbcf0
         lda   gIsRWTS    ; if DOS 3.3 RWTS
         bne   .exit
         lda   #$03
         ldx   #$94
         ldy   #$08
         jsr   compare    ; and T00,S03,$94 ==
         !byte $DD,$8C,$C0
         !byte $D0,$A9
         !byte $4C,$F0,$BC
         bcs   .exit      ; passport-test-suite/Easy as ABC.woz [C=0] matches
         sta   gDisplayBytes
         lda   #s_jmpbcf0
         jsr   PrintByID
         lda   #$03
         ldy   #$08
         jsr   modify     ; then set T00,S03,$94 =
         !byte $EA
         !byte $BD,$8C,$C0
         !byte $10,$FB
         !byte $C9,$AA
.exit
}
