;-------------------------------
; #RWTSSWAP
; after DOS loads, program calls
; subroutines at $BA69 and $BA7F
; to swap RWTS parameters on the
; fly
; e.g. Puzzle Master
;-------------------------------
!zone {
         bit   gMode      ; nothing to do here in verify-only mode
         bpl   .exit
         lda   gIsBoot0   ; if DOS 3.3 boot0 loader
         ora   gIsBoot1   ; and DOS 3.3 boot1 loader
         bne   .exit
         lda   #$04
         ldx   #$69
         ldy   #$0B
         jsr   compare    ; and T00,S04,$69 ==
         !byte $A0,$07
         !byte $B9,$DF,$BC
         !byte $99,$94,$B9
         !byte $88
         !byte $10,$F7
         bcs   .exit
         ldx   #$7F
         ldy   #$0B
         jsr   compare    ; and T00,S04,$7F ==
         !byte $A0,$07
         !byte $B9,$E7,$BC
         !byte $99,$94,$B9
         !byte $88
         !byte $10,$F7
         bcs   .exit
         ldx   #$69
         ldy   #$01
         jsr   modify     ; then set T00,S04,$69 =
         !byte $60
         lda   #$04
         ldx   #$7F
         ldy   #$01
         jsr   modify     ; and set T00,S04,$7F =
         !byte $60
.exit
}
