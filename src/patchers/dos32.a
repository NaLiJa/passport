;-------------------------------
; #DOS32
; construct new bootloader and RWTS
; for converted DOS 3.2 disks
;-------------------------------
!zone {
         lda   gIsDOS32
         bne   .exit

; sectors 2-9

         lda   #>universalrwts
         ldx   #$12       ; #BASEPAGE+2
         ldy   #$08
         jsr   CopyMemory
         lda   #$38
         sta   $1656      ; #BASEPAGE+6

; sector 1

         lda   #$B7       ; TODO might be #$37
         ldx   #$11       ; #BASEPAGE+1
         ldy   #$01
         jsr   CopyMemory
         lda   #$2C
         sta   $1138      ; #BASEPAGE+1

; sector 0

         lda   #<SD_DOS32
         ldx   #>SD_DOS32
         jsr   ConstructStandardDelivery

         lda   #s_bootwrite
         jsr   PrintByID

         inc   gPatchCount
.exit
}
