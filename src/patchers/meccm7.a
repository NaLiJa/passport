         ldy   #$01
         jsr   modify     ; then set T00,S07,$8D =
         !byte $AA
meccm7_addr3
         lda   #$07
         ldx   #$98
         ldy   #$01
         jsr   compare    ; if T00,S07,$98 !=
         !byte $96
         bcc   meccm7_data1
