         bcs   meccm7_exit
         lda   #$07
         ldx   #$20
         ldy   #$0A
         jsr   compare    ; and T00,S07,$20 ==
         !byte $D0,$F2,$A0,$56,$BD,$8C,$C0,$10,$FB,$C9
         bcc   meccm7_allclear
meccm7_exit
         jmp   meccm7_exit2
meccm7_allclear
         lda   #$07
         ldx   #$83
         ldy   #$01
         jsr   compare    ; if T00,S07,$83 !=
         !byte $D5
