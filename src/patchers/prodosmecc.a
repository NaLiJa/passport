         beq   +
         jmp   prodosmecc_exit
+
         ldy   #$0E
         jsr   SearchTrack
         !byte $50,$54,$58,$5C,$60,$64,$68,00
         !byte $20,$10,$30,$97,$AA,$EB
         bcs   +
         sta   gDisplayBytes
         inx
