;-------------------------------
; #PRODOSMECC
; patch MECC-specific bits on
; ProDOS-based MECC disks
; [thanks LoGo]
;-------------------------------
!zone {
         lda   gIsProDOS
         beq   +
         jmp   .exit
+
         ldy   #$0E
         jsr   SearchTrack
         !byte $50,$54,$58,$5C,$60,$64,$68,$00
         !byte $20,$10,$30,WILDCARD,$AA,$EB
         bcs   +          ; passport-test-suite/Mystery Objects v1.1.woz [C=0] matches
         sta   gDisplayBytes
         jsr   inx0B
         ldy   #$01
         jsr   compare
         !byte $DE
         bcc   +
         ldy   #$01
         jsr   modify
         !byte $DE
+
         ldy   #$0A
         jsr   SearchTrack
         !byte $AD,$C4,$D1
         !byte $CD,$C8,$D4
         !byte $08
         !byte $2C,$81,$C0
         bcs   +          ; passport-test-suite/Miner's Cave.woz [C=0] matches
         ldy   #$0B
         jsr   SearchTrack
         !byte $28
         !byte $D0,$06
         !byte $C9,$DE
         !byte $F0,$02
         !byte $18
         !byte $24,$38
         !byte $60
         bcs   +          ; passport-test-suite/Miner's Cave.woz [C=0] matches
         sta   gDisplayBytes
         jsr   inx9
         ldy   #$01
         jsr   modify
         !byte $18
+
         ldy   #$18
         jsr   SearchTrack

; variation seen in e.g. A-232 Spelling Press

         !byte $AD,$C4,$D1,$CD,$C8,$D4,$08,$2C
         !byte $81,$C0,$28,$D0,$09,$8D,WILDCARD,WILDCARD
         !byte $C9,$DE,$F0,$02,$18,$24,$38,$60
         bcs   +          ; passport-test-suite/Spelling Press v1.1.woz [C=0] matches
         sta   gDisplayBytes
         jsr   inx0B
         jsr   inx0B
         ldy   #$01
         jsr   modify
         !byte $18
+
         ldy   #$0C
         jsr   SearchTrack
         !byte $30,$A2
         !byte $20,$00,$BF
         !byte $80
         !byte WILDCARD,WILDCARD
         !byte $B0,$98
         !byte $38
         !byte $60
         bcs   +          ; passport-test-suite/Spelling Press v1.1.woz [C=0] matches
         jsr   inx0A
         ldy   #$01
         jsr   modify
         !byte $18
+
         ldy   #$0B
         jsr   SearchTrack
         !byte $30,$91,$38,$60,00,$20,00,03,00,03,00
         bcs   .exit      ; passport-test-suite/Spelling Press v1.1.woz [C=0] matches
         inx
         inx
         ldy   #$01
         jsr   modify
         !byte $18
.exit
}
