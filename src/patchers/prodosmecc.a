         ldy   #$01
         jsr   modify
         !byte $DE
+
         ldy   #$15
         jsr   SearchTrack
         !byte $AD,$C4,$D1,$CD,$C8,$D4,08,$2C
         !byte $81,$C0,$28,$D0,06,$C9,$DE,$F0
         !byte 02,$18,$24,$38,$60
         bcs   +
         sta   gDisplayBytes
