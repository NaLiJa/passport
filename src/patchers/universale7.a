         !byte $AC,00,$AC,00,$AC,00,$AC,00
         !byte $AC,00,$AC,00,$AC,00,$AC,00
         !byte $AC,00,$AC,00,$AC,00,$AC,00
         !byte $AC,00,$AC,00,$AC,00,$AC,00
         !byte $AC,00,$AC,00,$AC,00,$AC,00
         !byte $AC,00,$AC,00,$AC,00,$AC,00
         !byte $AC,00,$AC,00,$AC,00,$AC,00
         bcc   +
         jmp   e7nextsector
+
         lda   sector+1
         ldx   #$00
         ldy   #$80
         jsr   compare
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
