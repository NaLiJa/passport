         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         !byte 00,00,00,00,00,00,00,00
         bcc   +
         jmp   e7nextsector
+
         lda   sector+1
         sta   gDisplayBytes
         lda   #s_e7
         jsr   PrintByID
         lda   sector+1
         ldx   #$A3
         ldy   #$0C
         jsr   modify
         !byte $64,$B4,$44,$80,$2C,$DC,$18,$B4,$44,$80,$44,$B4
e7nextsector
         dec   sector+1
         bmi   universale7_exit
         jmp   sector
universale7_exit
