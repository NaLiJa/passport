;-------------------------------
; #LEISURE
; disk volume check
;
; Tested on
; - Clue: Master Detective (Leisure Genius)
; - Risk v1.4 (Leisure Genius)
;-------------------------------
!zone {
         ; gIsProDOS is TRUE here

         lda   gTrack
         cmp   #$22
         bne   .exit

         ldy   #$08
         jsr   SearchTrack
         !byte $AD,$70,$D3
         !byte $C9,$01
         !byte $D0,$01
         !byte $60
         bcs   .exit      ; passport-test-suite/Clue Master Detective.woz [C=0] matches
         ldy   #$01
         sty   gDisplayBytes+1
         jsr   PrintByID
         !byte s_diskvol0x
         jsr   inx6
         jsr   modify
         !byte $00
.exit
}
