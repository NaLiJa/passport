KEY      =     $C000
STROBE   =     $C010

WaitForKey
         bit   STROBE
k        lda   KEY
         bpl   k
         bit   STROBE
         cmp   #"*"
         bne   noast
         jsr   TEXT
         lda   #s_reset
         jsr   PrintByID
         jmp   $FF59
noast
         cmp   #$E1
         bcc   +
         and   #$DF       ; force uppercase
+
         rts
